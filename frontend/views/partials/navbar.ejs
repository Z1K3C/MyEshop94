<section id="nav_grp1" class="Mys_back2">
  <!--This navbar's section fill with logo, serach form and cart button-->
  <div id="nav_srch1" class="container py-2" >
    <div class="row">
      <div class="col">
        <a class="pl-4" href="/"><img src="/img/logo1.png" class="Mys_icon1"></a>
        <span id="nav_title" class="pl-3 Mys_title1">MyEshop94</span>
      </div>
      <div class="col-md-6 col-5">

        <div id="nav_searcher" class="input-group">
          <input id="nav_inpsearch" type="text" class="form-control" list="datalist1" placeholder="Search...">

          <datalist id="datalist1">
            <% if(products){ %>   <!--if exist products, call names for fill this option for helper autocomplete in search form-->
              <% products.forEach(function(inf,ind){ %>
                <option>   <%= inf %></option>
              <% }); %>
            <%} %>
          </datalist>

          <div class="input-group-append" style="height: 38px;">
            <button id="nav_btnsearch" class="btn btn-outline-secondary"><i class="fas fa-search text-white"></i></button>
          </div>
        </div>

      </div>
      <div class="col text-right mr-1">
        <a class="btn btn-outline-secondary px-0 Mys_btncart" href="/cart/all">
          <% if(amount){ %>     <!--if exist value, this info print in counter cart products-->
            <span id="nav_counts1" class="Mys_countercart"> <%= amount %>  </span>
          <%} else{ %>
            <span id="nav_counts1" class="Mys_countercart"> 0 </span>
          <%} %>
          <i  class="fas fa-cart-arrow-down" > </i>
          </a>
      </div>
    </div>
  </div>
  <!--This navbar's section fill with 4 "a" links, those are: home, categories, features and about-->
  <div id="nav_second" class="container">
    <nav class="navbar navbar-expand-lg navbar-light" style="font-family: sand1;">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link text-white" href="/">Inicio <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="nav_dropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Categorias
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

              <% if(type){ %>   <!--for each categorie name, create a link-->
                <% type.forEach(function(inf,ind){ %>
                  <a class="dropdown-item" href="<%= inf['path'] %>"><%= inf['nombre'] %></a>
                  <div class="dropdown-divider"></div>
                <% }); %>
              <% } %>

            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/about/features">Caracteristicas</a>
          </li>

          <li class="nav-item">
            <a class="nav-link text-white" href="/about/everthing">Acerca de...</a>
          </li>
          
        </ul>
      </div>
    </nav>
  </div>
  
</section>